    <script>
        // Dynamic tooltip generation
        document.addEventListener('DOMContentLoaded', function() {
            // Create tooltips for terms with data attributes
            document.querySelectorAll('.term[data-title]').forEach(term => {
                // Create tooltip element if it has data attributes
                if (!term.querySelector('.tooltip-bubble')) {
                    const title = term.getAttribute('data-title');
                    const badge = term.getAttribute('data-badge');
                    const def = term.getAttribute('data-def');
                    const exp = term.getAttribute('data-exp');
                    const proj = term.getAttribute('data-proj');
                    const prof = term.getAttribute('data-prof');
                    
                    if (title) {
                        const tooltip = document.createElement('div');
                        tooltip.className = 'tooltip-bubble';
                        tooltip.innerHTML = `
                            <div class="tooltip-title">
                                ${title}
                                ${badge ? `<span class="proficiency-badge">${badge}</span>` : ''}
                            </div>
                            ${def ? `<div class="tooltip-definition">${def}</div>` : ''}
                            ${(exp || proj || prof) ? `
                                <div class="tooltip-stats">
                                    ${exp ? `<div class="tooltip-stat"><div class="tooltip-stat-value">${exp}</div><div class="tooltip-stat-label">Experience</div></div>` : ''}
                                    ${proj ? `<div class="tooltip-stat"><div class="tooltip-stat-value">${proj}</div><div class="tooltip-stat-label">Projects</div></div>` : ''}
                                    ${prof ? `<div class="tooltip-stat"><div class="tooltip-stat-value">${prof}</div><div class="tooltip-stat-label">Proficiency</div></div>` : ''}
                                </div>
                            ` : ''}
                        `;
                        term.appendChild(tooltip);
                    }
                }
            });
            
            // Enhanced tooltip positioning
            document.querySelectorAll('.term').forEach(term => {
                term.addEventListener('mouseenter', function(e) {
                    const tooltip = this.querySelector('.tooltip-bubble');
                    if (tooltip) {
                        // Reset position first
                        tooltip.style.bottom = 'calc(100% + 10px)';
                        tooltip.style.top = 'auto';
                        tooltip.style.left = '50%';
                        tooltip.style.right = 'auto';
                        
                        // Force display to calculate position
                        tooltip.style.opacity = '1';
                        tooltip.style.visibility = 'visible';
                        tooltip.style.transform = 'translateX(-50%) scale(1)';
                        
                        // Check boundaries
                        setTimeout(() => {
                            const rect = tooltip.getBoundingClientRect();
                            
                            // If tooltip goes above viewport, show below
                            if (rect.top < 10) {
                                tooltip.style.bottom = 'auto';
                                tooltip.style.top = 'calc(100% + 10px)';
                            }
                            
                            // If tooltip goes off left edge
                            if (rect.left < 10) {
                                tooltip.style.left = '0';
                                tooltip.style.transform = 'translateX(0) scale(1)';
                            }
                            
                            // If tooltip goes off right edge
                            if (rect.right > window.innerWidth - 10) {
                                tooltip.style.left = 'auto';
                                tooltip.style.right = '0';
                                tooltip.style.transform = 'translateX(0) scale(1)';
                            }
                        }, 0);
                    }
                });
                
                term.addEventListener('mouseleave', function(e) {
                    const tooltip = this.querySelector('.tooltip-bubble');
                    if (tooltip) {
                        tooltip.style.opacity = '0';
                        tooltip.style.visibility = 'hidden';
                        tooltip.style.transform = 'translateX(-50%) scale(0.8)';
                    }
                });
            });
        });
    </script>
