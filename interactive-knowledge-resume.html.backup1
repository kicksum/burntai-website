        /* NEW: Top Navigation Bar */
        .top-nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: linear-gradient(135deg, var(--dark-bg) 0%, #1a0f0f 100%);
            border-bottom: 2px solid var(--neon-orange);
            padding: 12px 20px;
            z-index: 10001;
            box-shadow: 0 2px 20px rgba(255, 133, 51, 0.3);
            animation: navGlow 3s infinite alternate;
        }

        @keyframes navGlow {
            0% { box-shadow: 0 2px 20px rgba(255, 133, 51, 0.3); }
            100% { box-shadow: 0 2px 30px rgba(255, 133, 51, 0.5); }
        }

        .nav-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: var(--neon-orange);
            text-decoration: none;
            font-family: 'Orbitron', monospace;
            font-weight: 600;
            font-size: 1rem;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            padding: 8px 16px;
            border: 1px solid var(--neon-orange);
            border-radius: 4px;
            position: relative;
            overflow: hidden;
        }

        .back-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 133, 51, 0.2), transparent);
            transition: left 0.5s;
        }

        .back-link:hover {
            color: var(--neon-cyan);
            border-color: var(--neon-cyan);
            text-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
            box-shadow: 0 0 15px rgba(0, 229, 255, 0.4);
            transform: translateX(-2px);
        }

        .back-link:hover::before {
            left: 100%;
        }

        .back-arrow {
            font-size: 1.2rem;
            transition: transform 0.3s ease;
        }

        .back-link:hover .back-arrow {
            transform: translateX(-3px);
        }

        .nav-title {
            color: var(--neon-cyan);
            font-family: 'Share Tech Mono', monospace;
            font-size: 0.9rem;
            text-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
            letter-spacing: 2px;
        }

        .nav-status {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #00ff88;
            font-family: 'Share Tech Mono', monospace;
            font-size: 0.85rem;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: #00ff88;
            border-radius: 50%;
            box-shadow: 0 0 10px rgba(0, 255, 136, 0.8);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.7; transform: scale(1.2); }
        }

        /* Adjust container to account for fixed nav */
