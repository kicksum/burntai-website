            color: var(--accent);
            z-index: 9999;
        }

        /* Advanced Tooltip Bubble */
        .tooltip-bubble {
            position: absolute;
            bottom: calc(100% + 10px);
            left: 50%;
            transform: translateX(-50%) scale(0.8);
            background: var(--tooltip-bg);
            color: var(--tooltip-text);
            padding: 12px 16px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2), 0 6px 12px rgba(0,0,0,0.15);
            min-width: 280px;
            max-width: 350px;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            z-index: 10000;
            pointer-events: none;
        }

        .term:hover .tooltip-bubble,
        .term:focus .tooltip-bubble {
            opacity: 1;
            visibility: visible;
            transform: translateX(-50%) scale(1);
            pointer-events: auto;
        }

        .summary .term {
            z-index: 100;
        }

        .summary .term:hover {
            z-index: 9999;
        }

        section {
            position: relative;
            overflow: visible;
        }

        /* Tooltip Arrow */
        .tooltip-bubble::after {
            content: '';
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid transparent;
            border-top: 8px solid var(--tooltip-bg);
        }

        /* Tooltip Content Structure */
        .tooltip-title {
            font-size: 1.1em;
            font-weight: 600;
            margin-bottom: 8px;
            color: #60a5fa;
            display: flex;
            align-items: center;
